package sign

import ckey"security/crypto/key"

type SignType int16
const(
	SIGN_ECDSA SignType = iota
	SIGN_RSA_PKCS1V15
	SIGN_RSA_PSS
	SIGN_ED25519
)

type SignAlg interface {
	Init(key ckey.Key) error
	Update(msg []byte) error
	Sign(msg []byte) ([]byte,error)
	Verify(msg []byte, sig []byte) (bool,error)
	Reset()
}